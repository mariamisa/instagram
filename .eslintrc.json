{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": ["prettier", "jest"],

    "rules": {
        "prettier/prettier": [
            "error",
            {
              "trailingComma": "es5",
              "singleQuote": true,
              "endOfLine": "auto"
            }
          ],  
        "import/no-unresolved": [2, { "caseSensitive": false }], 
        "comma-dangle": ["error", "only-multiline"],
        "object-curly-newline": ["error", {
          "ObjectExpression": "always",
          "ObjectPattern": { "multiline": true }
      }]
      }
}
